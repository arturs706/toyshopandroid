<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    tools:context=".fragments.UpdateaddressFragment">

>

<TextView
    android:text="EDIT ADDRESS"
    android:layout_marginTop="30dp"
    android:id="@+id/tv1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxLength="1000"
    android:paddingHorizontal="32dp"
    android:textSize="24dp"
    android:fontFamily="@font/poppinsbold"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:text="Please check our privacy policy to know how we use your data"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:text="Privacy Policy"
    android:fontFamily="@font/poppinsbold"
    android:layout_marginBottom="10dp"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:text="Address"
    android:fontFamily="@font/poppinsbold"
    />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@color/colorPrimary"
    android:layout_marginHorizontal="28dp"

    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="12sp"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColor="@color/colorPrimary"

        />
</com.google.android.material.textfield.TextInputLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:text="City"
    android:fontFamily="@font/poppinsbold"
    />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@color/colorPrimary"
    android:layout_marginHorizontal="28dp"

    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:textSize="12sp"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        />
</com.google.android.material.textfield.TextInputLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:text="Post code"
    android:fontFamily="@font/poppinsbold"
    />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@color/colorPrimary"
    android:layout_marginHorizontal="28dp"

    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etMobilePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Post code"
        android:textSize="12sp"
        android:textColorHint="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        />
</com.google.android.material.textfield.TextInputLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:text="Enter your current password"
    android:fontFamily="@font/poppinsbold"
    />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@color/colorPrimary"
    android:layout_marginHorizontal="28dp"

    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etConfirmPass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        />
</com.google.android.material.textfield.TextInputLayout>


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:text="Confirm your current password"
    android:fontFamily="@font/poppinsbold"
    />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@color/colorPrimary"
    android:layout_marginHorizontal="28dp"

    >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etConfirmPass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:textColorHint="@color/colorPrimary"
        android:textColorHighlight="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        />
</com.google.android.material.textfield.TextInputLayout>
<Button
    android:id="@+id/btnUpdateProfile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/buttonbackground"
    android:backgroundTint="@color/colorPrimary"
    android:layout_gravity="center"
    android:layout_marginTop="100dp"
    android:paddingHorizontal="94dp"
    android:text="UPDATE ADDRESS"
    android:textColor="@color/colorDarkBackground"
    android:textSize="19sp" />

</LinearLayout>